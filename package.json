{
  "name": "pa_ariba_cv_tool",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^4.2.0",
    "@sap-cloud-sdk/http-client": "^4.2.0",
    "@sap/cds": "^9",
    "@sap/hana-client": "^2.27.19",
    "@sap/xssec": "^4",
    "express": "^4",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "@sap/hdi-deploy": "4.9.5",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.34",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-ui_pa_ariba_cv_tool_list": "cds watch --open infosys.pa.ariba.uipaaribacvtoollist/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy pa_ariba_cv_tool --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "requires": {
      "ARIBA_AUDIT_API": {
        "kind": "rest",
        "credentials": {
          "destination": "ARIBA_AUDIT_API"
        }
      },
      "db": "hana",
      "destinations": true
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/ui_pa_ariba_cv_tool_list"
  ]
}
